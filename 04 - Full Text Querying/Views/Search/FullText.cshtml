@model IEnumerable<_04___Full_Text_Querying.Models.Post>
           

<div class="row">
    <div class="span8 offset2">
        <div class="row">
            <div class="span8">
                @using (Html.BeginForm("FullText", "Search", FormMethod.Get)) {
                    @Html.TextBox("q", (object)ViewBag.Query, new { placeholder = "Search", @class="span8" })
                }
            </div>
        </div>
        @foreach(var post in Model) {
            <div class="row post">
                <div class="span8">
                    <h3><a href="http://stackoverflow.com/questions/@post.Id">@post.Title</a></h3>
                </div>
                <div class="span8">
                    @foreach(var tag in post.Tags) {
                        <span class="label label-info">
                            <a href="http://stackoverflow.com/questions/tagged/@tag">@tag</a> 
                        </span>
                    }
                </div>
            </div>
        }
    </div>
</div>